<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title> @ViewData["Title"] - WMS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />
      <link href="https://raw.githack.com/ttskch/select2-bootstrap4-theme/master/dist/select2-bootstrap4.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css"/>
    <link rel="stylesheet" href="~/css/backImage.css"/>
    <link rel="stylesheet" href="~/css/menu.css"/>
    <link rel="stylesheet" href="~/css/paragraph.css"/>
    <link rel="stylesheet" href="~/css/card.css"/>
    <link rel="stylesheet" href="~/css/label.css"/>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.css">
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
    <script src="~/js/modal.js"></script>

</head>
<body>
    <header class="shadow-sm mb-5 bg-white rounded">
        <nav class="navbar navbar-expand-lg" style="background-color: #fff;">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index"><span style="color:black; font-size:30px; background-color:white; border-radius:10px;">WMS</span>@*<img src="~/Img/LSKIcon.jpg" style="width:30px; height: 30px; border-radius: 10px;">*@</a>
            <button class="navbar-toggler badge-light" style="border-radius:10px;" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-caret-down-square-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2zm4 4a.5.5 0 0 0-.374.832l4 4.5a.5.5 0 0 0 .748 0l4-4.5A.5.5 0 0 0 12 6H4z" />
                </svg>
            </button>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav mr-auto">

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle paragraphLayout active text-black" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="color: black">
                            Аккаунт
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <div class="container">
                                <div class="row">
                                    <div class="col-md-12">
                                        <ul class="nav flex-column paragraphHome">
                                            <li class="nav-item text-center">
                                                <a class="nav-link active text-black" asp-controller="Account" asp-action="Register">
                                                    Регистрация
                                                </a>
                                            </li>
                                            <li class="nav-item text-center">
                                                <a class="nav-link active text-black" asp-controller="Account" asp-action="Login">
                                                    Вход
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>


                    <li class="nav-item dropdown" >
                        <a class="nav-link paragraphLayout active text-black" asp-controller="Device" asp-action="GetDevices" asp-route-placeId="0" style="color: black">
                            Приборы
                        </a>
                    </li>

                    <li class="nav-item dropdown" >
                        <a class="nav-link paragraphLayout active text-black" asp-controller="Place" asp-action="GetPlaces" style="color: black">
                            Помещения
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link paragraphLayout active text-black" asp-controller="User" asp-action="GetUsers" style="color: black">
                            Пользователи
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link paragraphLayout active text-black" asp-controller="Basket" asp-action="GetBasket" style="color: black">
                           Список приборов
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link paragraphLayout active text-black" asp-controller="ToDoList" asp-action="GetLists" style="color: black">
                            Задачи
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link paragraphLayout active text-black" asp-controller="ListNames" asp-action="GetNames" style="color: black">
                           Наименования
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link paragraphLayout active text-black" asp-controller="TypeOfDevice" asp-action="GetAllTypes" style="color: black">
                            Типы приборов
                        </a>
                    </li>
                   
                </ul>
                <a asp-controller="Profile" asp-action="Detail">
                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="" class="bi bi-person" viewBox="0 0 16 16">
                        <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0m4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4m-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10s-3.516.68-4.168 1.332c-.678.678-.83 1.418-.832 1.664z" />
                    </svg>
                </a>

                <form method="post" asp-controller="Account" asp-action="Logout">
                    <input class="btn rounded" font-weight: bold; font-size:20px;" type="submit" value="Выйти из аккаунта" />
                </form>

            </div>
        </nav>
    </header>
    <div class="container-fluid col-xl-12" style="background-color: #white;">
        <main role="main">
            @RenderBody()
        </main>
    </div>

   

 


    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- <script src="https://code.jquery.com/jquery-3.7.1.js"></script>-->
     <script src="https://code.jquery.com/ui/1.13.3/jquery-ui.js"></script>
     <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
    <script src="~/js/modal.js"></script>


    @RenderSection("pageScripts", required: false)
</body>
</html>